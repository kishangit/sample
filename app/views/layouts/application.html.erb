<!DOCTYPE html>
<html>
  <head>
    <title>DocAppointment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
      <p class="notice_alert">
        <%= notice %>
          <script type="text/javascript">
            (function () { removeNoticeAlert(); })();
          </script>
      </p>
    <% end %>

    <% if alert %>
      <p class="notice_alert">
        <%= alert %>
        <script type="text/javascript">
          (function () { removeNoticeAlert(); })();
        </script>    
      </p>
    <% end %>

    <div class="header">
      <p class="main_title">DocAppointment</p>
    
      <% if user_signed_in? %>
        <p class="edit"><%= link_to('Edit your profile', edit_user_registration_path) %></p>
      <% end %>

      <% if user_signed_in? %>
        <p class="logout"><%= button_to('Logout', destroy_user_session_path, method: :delete) %>&nbsp;&nbsp;</p>
      <% end %>
    </div>

    


    <%= yield %>
  </body>
</html>
